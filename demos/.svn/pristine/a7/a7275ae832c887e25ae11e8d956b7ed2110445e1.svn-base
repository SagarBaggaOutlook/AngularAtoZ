<!DOCTYPE html>
<html lang="en" ng-app="bikeModule">
<head>
	<meta charset="utf-8">
	<title>simple controller</title>
	<script src="../js/angular.min.js"></script>
	<!-- <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.3/angular.min.js"></script> -->
</head>
<body>
<!-- 	<div ng-init="empDetail=[{name:'Sagar',extn:1099},{name:'Kartik',extn:1100},{name:'Shyam',extn:1209}]">
		<div ng-repeat="emp in empDetail">
			<div>Emp Name: {{emp.name}}</div>
			<div>Extn. number: {{emp.extn}}</div><br>
		</div>
	</div> -->
	<div ng-controller="bikeController" >
		Select your favourite Bike : 
		<button ng-click="pulsar()">Pulsar</button>
		<button ng-click="avenger()">Avenger</button>
		<button ng-click="renegade()">Renegade</button>
		<button ng-click="harley()">Harley</button>
		<p>
			You have selected <strong>{{mybike}}</strong>			
		</p>
	</div>
	<div>
		Amount you want to pay: <input type="text" ng-model="price">
		<p><em>{{price | currency:"Rupees.":2}}</em></p>
	</div>
	
	<script>
		var app = angular.module('bikeModule',[]);
		
			app.controller('bikeController',['$scope',function($scope){
				$scope.mybike = "None";

				$scope.pulsar = function(){
					$scope.mybike = "pulsar";
				}

				$scope.avenger = function(){
					$scope.mybike = "avenger";
				}

				$scope.renegade = function(){
					$scope.mybike = "renegade";
				}

				$scope.harley = function(){
					$scope.mybike = "harley";
				}
			}]);
	</script>
</body>
</html>